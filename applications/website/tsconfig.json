{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "lib": ["es2019", "DOM", "ES6" ,"DOM.Iterable", "ScriptHost"],                             /* Specify library files to be included in the compilation. */
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["webpack-env"]
  },
  "include": [
    "src",
    "./react-app-env.d.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
